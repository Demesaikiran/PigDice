<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".skins"
    android:background="@drawable/base_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:layout_margin="20sp"
        >

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/white"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="30sp"
            android:layout_marginStart="15sp"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/antic"
            android:text="@string/default_dice"
            android:textSize="18sp" />
        <Button
            android:id="@+id/whiteDice"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:text="@string/select"
            android:background="@drawable/bg"
            android:backgroundTint="#000000"
            android:textColor="#ffffff"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="230sp"
            android:layout_marginEnd="20sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:layout_margin="20sp"
        >
        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/silver"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="15sp"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/silver_dice"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="110sp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/silverDice"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:background="@drawable/bg"
            android:textColor="#ffffff"
            android:backgroundTint="#000000"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="230sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/bg">

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="15sp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/gold" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:text="@string/gold_dice"
            android:textSize="18sp" />

        <Button
            android:id="@+id/goldDice"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="230sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:text="@string/select"
            android:background="@drawable/bg"
            android:backgroundTint="#000000"
            android:textColor="#ffffff" />

    </RelativeLayout>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="270dp"
        app:srcCompat="@drawable/base"
        android:paddingStart="100dp"
        android:contentDescription="@string/todo" />
</LinearLayout>