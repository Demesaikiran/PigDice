<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".skins"
    android:background="@drawable/background2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slate_gray"
        android:layout_margin="20sp"
        >

        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/white"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:layout_marginStart="20sp"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/default_dice"
            android:layout_marginTop="45sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="110sp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/whiteDice"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="230sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slate_gray"
        android:layout_margin="20sp"
        >
        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/silver"
            android:layout_marginStart="20sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/gold_dice"
            android:layout_marginTop="45sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="110sp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/silverDice"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="230sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@color/slate_gray">

        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/gold" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110sp"
            android:layout_marginTop="45sp"
            android:layout_marginBottom="20sp"
            android:text="@string/silver_dice"
            android:textSize="18sp" />

        <Button
            android:id="@+id/goldDice"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="230sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            android:text="@string/select" />

    </RelativeLayout>

</LinearLayout>